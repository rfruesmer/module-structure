{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "jquery",
            "mocha",
            "node"
        ]
    },
    "include": [
        "./src/**/*",
        "./test/**/*"
    ],
    "exclude": [
        "node_modules/*"
    ]
}
